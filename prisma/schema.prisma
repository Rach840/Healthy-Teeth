generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  image       String
  description Json?
  services    Services[]
}

model Services {
  id           Int      @id @default(autoincrement())
  name         String
  image        String
  price        Int
  categoryName String
  category     Category @relation(fields: [categoryName], references: [name])
  description  Json?
}

model Users {
  id        Int      @id @default(autoincrement())
  firstName String
  surName   String?
  lastName  String
  password  String
  email     String   @unique
  phone     String   @unique
  birth     DateTime
  gender    Gender
  snils     String
}

model Records {
  id        Int @id @default(autoincrement())
  doctorId  Int
  serviceId Int
  userId    Int
}

enum Gender {
  MALE
  FEMALE
}
